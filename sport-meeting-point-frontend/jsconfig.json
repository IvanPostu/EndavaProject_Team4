/*

IMPORTANT!!!!

  So that the import syntax works correctly, write ALL alias here

*/


{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "restApi/*": [
        "src/rest/*"
      ],
      "utils/*": [
        "src/utils/*"
      ],
      "data/*": [
        "src/redux/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "static"
  ]
}